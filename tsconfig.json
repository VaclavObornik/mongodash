{
  "compilerOptions": {
    "moduleResolution": "node",
    "module":"commonjs",
    "target": "es2017",
    "lib": ["es2020", "esnext.disposable"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "listFiles": false,
    "declarationDir": "./dist/types",
    "outDir": "./dist/lib",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
